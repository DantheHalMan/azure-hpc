{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "vmName": {
      "type": "string",
      "metadata": {
        "Description": "vmName to apply the script"
      }
    },
    "vmScripts": {
      "type": "object",
      "metadata": {
        "Description": "vmScripts to download and command to execute"
      }
    }
  },
  "variables": {
    "extensionApiVersion": "2015-06-15"
  },
  "resources": [
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'), '/masterExtension')]",
      "apiVersion": "[variables('extensionApiVersion')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "publisher": "Microsoft.Azure.Extensions",
        "type": "CustomScript",
        "typeHandlerVersion": "2.0",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "fileUris": "[parameters('vmScripts').scriptsToDownload]",
          "timestamp": 12345
        },
        "protectedSettings": {
          "commandToExecute": "parameters('vmScripts').commandToExecute"
        }
      }
    }
  ]
}
